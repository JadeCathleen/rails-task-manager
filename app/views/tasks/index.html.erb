<h1>My To Do List</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task), class: 'link' %>
    <%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure you want to delete #{task.title} ?" } %></li>
  <%end%>
</ul>

<%= link_to 'Add a new Task', new_task_path, class: 'link' %>
